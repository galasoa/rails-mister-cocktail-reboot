<h1><%= @cocktail.name %></h1>

<h3>Ingredients:</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> | <%= link_to "Delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure you want to delete #{dose.description} #{dose.ingredient.name}?"} %></li>
  <% end %>
</ul>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
